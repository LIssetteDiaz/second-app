<p id="notice"><%= notice %></p>

<h1>Estudiantes</h1>

<table>
  <thead>
    <tr class="text-center">
      <th>Nombre</th>
      <th>Edad</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr class="table-active mt-3 mb-3">
        <td><%= student.name %></td>
        <td><%= student.age %></td>
        <td><%= student.email %></td>
        <td><%= link_to 'Ver', student, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Editar', edit_student_path(student), class: 'btn btn-success' %></td>
        <td><%= link_to 'Eliminar', student, class: 'btn btn-danger', method: :delete, data: { confirm: 'estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo estudiante', new_student_path, class: 'btn btn-warning' %>
